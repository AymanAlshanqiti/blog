<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
  <title>Blog Articles</title>
</head>
<body>
  <div class="container">
    <h1 class="my-3">Blog Articles</h1>
    <a href="/articles/new" class="btn btn-success mb-4">New Article</a>
    <% articles.forEach(article => { %>
      <div class="card mb-4">
        <div class="card-body">
          <h4 class="card-title mb-2"><%= article.title %></h4>
          <div class="card-subtitle text-muted mb-2"><%= article.createdAt.toLocaleDateString() %></div>
          <div class="card-text"><%= article.description %></div>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>